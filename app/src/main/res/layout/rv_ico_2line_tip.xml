<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Ico"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:alpha="0.54" />

        <ImageView
            android:id="@+id/OvalPoint"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TitleMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:singleLine="true"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/TitleTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorBlack"
                android:singleLine="true"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_vertical|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Tip"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/TipIco"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <View
        android:id="@+id/Divider"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_marginLeft="72dp"
        android:layout_height="2px"
        android:background="@color/colorBlack10" />


    <teamgodeater.car_net.Widget.RippleView
        android:id="@+id/Click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rippleColor="@color/colorBlack5"
        app:showClickBackground="true" />

</FrameLayout>