<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app ="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:splitMotionEvents="false"
    android:layout_width="306dp"
    android:layout_height="match_parent">

   <FrameLayout
       android:id="@+id/HeadContain"
       android:layout_gravity="top"
       android:background="@color/colorPrimary"
       android:layout_width="match_parent"
       android:layout_height="225dp">

      <teamgodeater.car_net.Widget.RoundImageView
          android:id="@+id/HeadImage"
          android:layout_gravity="center_horizontal"
          app:border_outcolor="#afffffff"
          app:border_width="2dp"
          android:layout_marginTop="55dp"
          android:src="@drawable/head_image"
          android:layout_width="65dp"
          android:layout_height="65dp" />

       <TextView
           android:id="@+id/Greetings"
           android:alpha="0.87"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="140dp"
           android:textColor="@color/colorWhite"
           android:text="中午好赵日天"
           android:textSize="16dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/TitleMain"
           android:drawableLeft="@drawable/ic_location_on_white"
           android:drawablePadding="12dp"
           android:layout_marginTop="185dp"
           android:layout_gravity="center_horizontal"
           android:textColor="@color/colorWhite"
           android:alpha="0.87"
           android:maxWidth="225dp"
           android:singleLine="true"
           android:text="海口市 美兰区 海南大学海口市"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </FrameLayout>


   <android.support.v7.widget.RecyclerView
       android:id="@+id/RecyclerView"
       android:splitMotionEvents="false"
       android:layout_marginTop="225dp"
       android:background="@color/colorBackground"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>

    <teamgodeater.car_net.Widget.RippleView
        android:id="@+id/Set"
        android:layout_gravity="bottom|left"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/colorBlack87"
        android:clickable="true"
        android:text="设置"
        android:layout_width="153dp"
        android:layout_height="42dp"
        app:rippleColor="@color/colorBlack10"
        />

    <teamgodeater.car_net.Widget.RippleView
        android:id="@+id/Fnish"
        android:layout_gravity="bottom|right"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/colorBlack87"
        android:clickable="true"
        android:text="退出应用"
        android:layout_width="153dp"
        android:layout_height="42dp"
        app:rippleColor="@color/colorBlack10"
        />
    <View
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="8dp"
        android:alpha="0.54"
        android:background="@color/colorBlack"
        android:layout_width="1px"
        android:layout_height="26dp"/>
</FrameLayout>